<data>
    <xpath expr="/form/field[@name='formula']" position="before">
        <label name="base_price_formula"/>
        <field name="base_price_formula" colspan="3"/>
    </xpath>
    <xpath expr="/form/field[@name='formula']" position="after">
        <label id="discount" string="Discount"/>
        <group col="-1" id="discounts">
            <group col="-1" id="discount_rate">
                <field name="discount_rate" factor="100" xexpand="0"/>
                <label name="discount_rate" string="%" xalign="0.0" xexpand="1"/>
            </group>
        </group>
    </xpath>
</data>
